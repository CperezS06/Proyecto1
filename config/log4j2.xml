<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="5">

    <Appenders>
        <RollingFile name="eventos" fileName="log/Loginfo.log" filePattern="log/Loginfo-%d{yyyy-MM-dd}.log">
            <MarkerFilter marker="marker" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="marker" fileName="log/Loginfomarker.log" filePattern="log/Loginfomarker-%d{yyyy-MM-dd}.log">
            <MarkerFilter marker="marker" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="eventos"/>
            <AppenderRef ref="marker"/>
        </Root>
    </Loggers>

</Configuration>